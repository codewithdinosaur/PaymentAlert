{
  "name": "payment-alert",
  "version": "1.0.0",
  "description": "Payment Alert System with MongoDB and Mongoose",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "seed:admin": "ts-node src/seeds/adminSeed.ts",
    "seed:all": "ts-node src/seeds/index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "payment",
    "alert",
    "mongodb",
    "mongoose",
    "donations"
  ],
  "author": "PaymentAlert Team",
  "license": "MIT",
  "dependencies": {
    "mongoose": "^8.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
