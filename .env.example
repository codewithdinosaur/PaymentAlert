# Environment
NODE_ENV=development
PORT=3000

# MongoDB Configuration
# Local development: mongodb://localhost:27017/payment_alert_dev
# Docker development: mongodb://admin:password123@localhost:27017/payment_alert_dev?authSource=admin
MONGODB_URI=mongodb://localhost:27017/payment_alert_dev

# Razorpay Configuration
# Get these from your Razorpay dashboard: https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# Security
# Generate a strong JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here

# CORS Configuration
# For development: http://localhost:3000
# For production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
# Options: error, warn, info, debug
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100           # Maximum requests per window
